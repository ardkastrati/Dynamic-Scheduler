void Visualiser::visualise(){

	gnuplot_ctrl *h;
	h = gnuplot_init();

	char* title = new char[3];
	strcpy(title,"Bob");
	char* f = new char[6];
	strcpy(f,"sin(x)");

	gnuplot_plot_equation(h,f,title);
	usleep(3000);
	gnuplot_close(h);

	std::cout << "Welcome to C++!\n";
}
