#include "Visualiser.h"
#include <iostream>
#include <unistd.h>
extern "C" {
	#include "include/gnuplot_i.h"
}
#include "include/gnuplot_i.c"

Visualiser::Visualiser() {
	// TODO Automatisch generierter Konstruktorstub

}

Visualiser::~Visualiser() {
	// TODO !CodeTemplates.destructorstub.tododesc!
}


void Visualiser::visualise(){

	gnuplot_ctrl *h;
	h = gnuplot_init();

	const char* title = "Bob";
	const char* f = "sin(x)";
	gnuplot_plot_equation(h,f,title);
	usleep(3000);
	gnuplot_close(h);

	std::cout << "Welcome to C++!\n";
}
